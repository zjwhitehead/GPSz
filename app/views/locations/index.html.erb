<%= gmaps4rails(@json) %>

<div id='container'>
<h1>Listing locations</h1>

<table>
  <tr>
    <th><%= sortable "Name" %></th>
    <th><%= sortable "Address" %></th>
    <th>Longitude</th>
    <th>Latitude</th>
  </tr>

<% @locations.each do |location| %>
  <tr>
    <td><%= location.name %></td>
    <td><%= location.address %></td>
    <td><%= location.longitude %></td>
    <td><%= location.latitude %></td>
    <td><%= link_to 'Show', location %></td>
    <td><%= link_to 'Edit', edit_location_path(location) %></td>
    <td><%= link_to 'Delete', location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
<br />
Download:
  <%= link_to "CSV", locations_path(format: "csv") %> 
<%= form_tag import_locations_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Import" %>
<% end %>
<%= button_to "New Location", new_location_path, :method => "get" %>
</div>
